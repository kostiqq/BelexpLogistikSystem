@model IEnumerable<Ride>

@{
    ViewData["Title"] = "Index";
}
<script src="~/js/site.js"></script>
<body>
    <h3>Поездки</h3>
    <div>
        <table class="table informationOrdersNotEnd">
            <tr>
                <th>
                    Номер заказа
                </th>
                <th>
                    Город назначения
                </th>
                <th>
                    Груз
                </th>
                <th>
                    Машина
                </th>
            </tr>
            @foreach (var ride in Model.Where(p => p.IsComplete == false))
            {
                <tr>
                    <td rowspan="2">
                        @ride.Order.Id
                    </td>
                    <td>
                        @ride.Order.DepartureCity
                    </td>
                    <td>
                        @ride.Order.GoodsName
                    </td>
                    <td>
                        @ride.Car.CarModel @ride.Car.CarNumber
                    </td>
                </tr>
                <tr>
                    <td colspan="2">@Html.ActionLink("Полная информация...", "Info", new { id = ride.Id }, null)</td>
                </tr>
                <tr>
                    <td colspan="2">@Html.ActionLink("Изменить статус поездки", "EditStatus", new { id = ride.Id }, null)</td>
                </tr>
            }
        </table>
    </div>
</body>