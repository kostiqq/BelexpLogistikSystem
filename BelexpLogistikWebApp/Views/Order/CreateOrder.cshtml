@model BelexpLogistikWebApp.Orders

@{
    ViewData["Title"] = "CreateOrder";
}

<div clss="divImgAboutHistory">
    <img src="https://beleks.ibiz.by/images/company/27279/header.jpg" class="backDivMainIMGAboytGostoty" />
    <span class="spanHistory">ОСТАВИТЬ ЗАЯВКУ</span>
</div>

<div class="row backcreat">
    <div class="col-md-4">
        <form asp-action="CreateOrder">
            <table class="createOrderTable">
                <tr>
                    <td>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label class="control-label">Город назначения</label>
                            <input asp-for="DepartureCity" class="form-control" />
                            <span asp-validation-for="DepartureCity" class="text-danger"></span>
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            <label class="control-label">Мобильный телефон</label>
                            <input asp-for="PhoneNumber" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <div class="form-group">
                            <label class="control-label">Электронная почта</label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            <label class="control-label">Имя</label>
                            <input asp-for="CostumerName" class="form-control" />
                            <span asp-validation-for="CostumerName" class="text-danger"></span>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <div class="form-group">
                            <label class="control-label">Что вы хотите перевезти?</label>
                            <input asp-for="GoodsName" class="form-control" />
                            <span asp-validation-for="GoodsName" class="text-danger"></span>
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            <label class="control-label">Примерный вес груза</label>
                            <input asp-for="GoodsWeight" class="form-control" />
                            <span asp-validation-for="GoodsWeight" class="text-danger"></span>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <div class="form-group">
                            <label class="control-label">Прочая информация</label>
                            <input asp-for="OtherInfo" class="form-control" />
                            <span asp-validation-for="OtherInfo" class="text-danger"></span>
                        </div>
                    </td>
                    <td>

                        <div class="form-group">
                            <input type="submit" value="Отправить" class="btn btn-primary" />
                        </div>
                    </td>
                </tr>
            </table>
           
          
           
          
           
          
           
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

