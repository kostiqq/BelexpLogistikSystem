@model BelexpLogistikWebApp.Models.LoginViewModel

<h2>Вход в приложение</h2>
<form method="post" asp-controller="Account" asp-action="Login"
      asp-route-returnUrl="@Model.ReturnUrl">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <label class="marginTextTop" asp-for="Email"></label><br />
        <input class="registerInput" asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div>
        <label class="marginTextTop" asp-for="Password"></label><br />
        <input class="registerInput" asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div>
        <label class="marginTextTop" asp-for="RememberMe"></label>
        <input class="registerInput" asp-for="RememberMe" />
    </div>
    <div>
        <input class="registerBut" type="submit" value="Войти" />
    </div>
</form>